{
  "compilerOptions": {
      "jsx": "react",
      "declaration": true,
      "module": "es2020",
      "isolatedModules": true,
      "emitDeclarationOnly": true,
      "noImplicitAny": true,
      "outDir": "./build/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true
  },
  "exclude": ["webpack.config.js", "node_modules", "build"],
  "include": ["src/**/**/**/**/*", "types/index.d.ts"]
}